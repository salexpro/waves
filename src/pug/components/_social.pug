            stop(offset='0.53125', stop-color='#3C7DFF')
            stop(offset='1', stop-color='#0053F9')               
        lineargradient#gradientSecondary(x1='10', y1='0', x2='10', y2='16', gradientunits='userSpaceOnUse')
