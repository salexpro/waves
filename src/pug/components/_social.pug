mixin social
    ul.social&attributes(attributes)
        each item in socials
            li
                a(href=item.link target="_blank")
                    svg(width=item.icon.sizes[0], height=item.icon.sizes[1], viewbox=`0 0 ${item.icon.sizes[0]} ${item.icon.sizes[1]}`, fill='none', xmlns='http://www.w3.org/2000/svg')
                        g(mask=`url(#${item.icon.name})`)
                            rect(x='0', y='0', width='100%', height='100%', fill='currentColor')              
                            rect.social_gradient(x='0', y='0', width='100%', height='100%', fill='url(#gradient)')