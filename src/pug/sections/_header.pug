header.header
    .grid-container.header_inner
        .header_logo
            a(href="https://wavesplatform.com/" target="_blank")
                img(src="./assets/img/logo_waves.svg", alt="Waves")
            a(href="https://forklog.com/" target="_blank")
                img(src="./assets/img/logo_forklog.svg", alt="Forklog")
        ul.header_menu
            -
                const menu = [{
                    link: './',
                    label: 'Главная',
                },
                {
                    link: 'theory.html',
                    label: 'Теория'
                },
                {
                    link: 'practice.html',
                    label: 'Практика'
                }]
            each item in menu
                li
                    a(href=item.link class=item.link.includes(page) || item.active ? 'is_active' : false)
                        =item.label
        +social
        .header_buttons
            a.button.small.hollow(data-toggle="subcribe")
                | Подписка
            a.button.small.hollow(href="https://forklog.com/sp/" target="_blank")
                | Все спецпроекты

